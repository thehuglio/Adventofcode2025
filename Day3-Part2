package org.thehuglio;
import java.io.File;
import java.util.*;

public class Main {

    private static final List<String> data = new Reader(new File("data.txt")).data;
    public static void main(String[] args) {
        long tot = 0;

        for (String s : data) {
            sb = new StringBuilder();
            List<Integer> integers = new ArrayList<>();
            for (String string : s.split("")) {
                integers.add(Integer.parseInt(string));
            }
            buildlarge(integers,11);
            tot += Long.parseLong(sb.toString());
        }
        System.out.println(tot);
    }
    public static StringBuilder sb;
    public static void buildlarge(List<Integer> list, int max) {
        if (sb.length() >= 12) return;
        for (int i = 9; i > 0; i--) {
            if (sb.length() >= 12) return;
            int highestindex = list.indexOf(i);
            if (highestindex < list.size() - max && highestindex != -1) {
                sb.append(i);
                System.out.println(sb.toString() + " - " +highestindex + " - " + max + " ---- " + list.toString());
                list.subList(0,highestindex+1).clear();
                buildlarge(list,max-1);
            }
        }
    }
}
